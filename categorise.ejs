<!doctype html>
<html lang = "en">
<head>
<%- include('header') %>
	<link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
	<script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>

</head>
<body>
<%- include('modal') %>
	
	
	<div class = "jumbotron"></div>

	<div class = "container-fluid">
		<div class = "row">
<%- include('navbar') %>	
		</div>
		<div class = "row">
			<div id = "id_cate_container_form" class = "col-md-8 col-md-offset-2">
				<div class = "panel panel-success">
					<div class = "panel-heading">
						<h1>Categorise Unfiled Questions</h1>
					</div>
					<div class = "panel-body">
						<form role = "form" class = "form-horizontal">
							<div class = "form-group">
								<label class = "control-label col-md-3" for = "id_core_select_subject">Subject</label>
								<div class = "col-md-8">
									<select class = "form-control" id = "id_core_select_subject">
										<option></option>
									</select>
								</div>
							</div>
							
							<div class = "panel panel-default">
								<div class = "panel-heading btn btn-default btn-block" data-toggle = "collapse" data-target="#id_cate_div_option">
									<span class = "glyphicon glyphicon-cog"></span> Options
								</div>
								<div class = "collapse" id = "id_cate_div_option">
									<div class = "panel-body">
										<div class = "row">
											<div class = "form-group">
												<label class = "control-label col-md-3" for = "id_query_input_hashedid">Hashed id</label>
												<div class = "col-md-5">
													<input class = "form-control" type = "text" id = "id_query_input_hashedid">
												</div>
											</div>
										</div>
										<hr>
										<div class = "row">
											<div class = "form-group">
												<label class = "control-label col-md-3" for = "idSyllabusCtrl">Find the questions</label>
												<div class = "col-md-5">
													<input id = "idSyllabusCtrl" type = "checkbox" data-toggle = "toggle" data-on="already in" data-off="not yet in"> <span id = "id_cate_tooltip_syllabusTooltip" class = "hovershow glyphicon glyphicon-question-sign hidden" title = "If ON, search results will ONLY show questions ALREADY categorised in the syllabus.<br /><br /> If OFF, search results will ONLY show questions NOT YET categorised in the syllabus."></span> 
												</div>
											</div>
											<div class = "form-group">
												<label class = "control-label col-md-3" for = "id_core_select_syllabus">Syllabus </label>
												<div class = "col-md-5">
													<select class = "form-control" id = "id_core_select_syllabus">
														<option></option>
													</select>
												</div>
												<div class = "col-md-3">
													<div class = "btn btn-default btn-block" id = "id_core_btn_addcurriculum">
														+ curriculum
													</div>
												</div>
											</div>
										</div>
										<hr>
										<div class = "row">
											<div class = "form-group">
												<label class = "control-label col-md-3" for = "id_cate_input_number">Number of Questions</label>
												<div class = "col-md-3">
													<input type = "text" class = "form-control" id = "id_cate_input_number" value = 5></input>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</form>
					</div>
					<div class = "panel-footer text-center">
						<div id = "id_cate_btn_catego" class = "btn btn-success btn-lg">Go
						</div>
					</div>
				</div>
			</div>
			<div id = "id_cate_container_answer" class = "hidden col-md-10 col-md-offset-1">
				<div class = "panel panel-success">
					<div class = "panel-heading">
					<h1>Categorise away!</h1>
					</div>
					<div class = "panel-body">
						<div id = "id_cate_div_leftAns" class = "col-md-7">
						</div>
						<div id = "id_cate_div_rightAns" class = "col-md-5">
							<div id = "id_cate_div_affix">
								<div class = "row">
									<form class = "form-horizontal">
										<div class = "form-group">
											<label class = "control-label col-md-2" for = "id_core_select_syllabus">Syllabus</label>
											<div class = "col-md-5">
												<select class = "class_core_select_syllabus form-control" id = "id_core_select_syllabus">
													<option></option>
												</select>
											</div>
											<div class = "col-md-5">
												<div class = "btn btn-default btn-block" id = "id_core_btn_addcurriculum">
													+ curriculum
												</div>
											</div>
										</div>
									</form>
								</div>
								<input class = "hidden" id = "id_core_input_dp">
								<div class = "row well" id = "id_core_div_dpmap">
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
</html>